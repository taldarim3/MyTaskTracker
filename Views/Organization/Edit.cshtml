@using MyTaskTracker.ViewModels
@model EditOrganizationViewModel

<style>
    .form-edit {
        max-width: 600px; /* Ограничивает ширину формы */
        margin: auto;
        height: 1000px;/* Центрирует форму на странице */
    }

    .description-textarea {
        height: 700px; 
    }
</style>

<form method="post" asp-action="Edit" enctype="multipart/form-data" class="form-edit">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control description-textarea" placeholder="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Подтвердить</button>
</form>